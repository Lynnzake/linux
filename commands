    echo Hello python >>a   ">>"append data to the file
    cat a   display content
    ls -lh > a  write relevant info into a
    ls -lha ~ | more     pipe comman "|" connect two linux_commands
    ls -lh ~ | grep va
    shutdown [options] [time]
    shutdown now
    shutdown -r now reboot system
    ifconfig    query ip of the host
    ifconfig | grep inet    display ip
